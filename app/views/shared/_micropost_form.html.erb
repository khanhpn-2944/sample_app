<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.text_area :content, placeholder: t(".content_placeholder")%>
  </div>

  <%= f.submit t(".submit_button"), class: "btn btn-primary" %>

  <span class="image">
    <%= f.file_field :image, accept: Settings.const.image_accept %>
  </span>
<% end %>

<%= javascript_pack_tag "validate_image", "data-turbolinks-track": "reload" %>
